<?xml version="1.0" encoding="UTF-8"?>
<validators>
    <validator id="aeemployeeForm">
        <validation dataType="isGoodName" field="name" noteId="nameMsg" required="true">
            <note>不要使用非标准的符号,将作为id</note>
            <error>不要使用非标准的符号</error>
        </validation>

        <validation dataType="isLengthBetween(1,50)" field="name" noteId="nameMsg" required="true">
            <note>角色名称。</note>
            <error>必须填写1－50个字符</error>
        </validation>

        <validation dataType="isLengthBetween(1,2)" field="sex" noteId="sexMsg" required="true">
            <note>性别,填写男或者女</note>
            <error>填写男或者女</error>
        </validation>
        <validation dataType="isBetween(14,120)" field="old" noteId="oldMsg" required="true">
            <note>年龄,填写数字,在14到120范围</note>
            <error>填写数字,在14到120范围</error>
        </validation>
    </validator>
</validators>